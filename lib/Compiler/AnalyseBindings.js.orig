"use strict";

var Visitor = require("../Visitor.js");



function AnalyseBindings(sourcename) {
  Visitor.call(this, sourcename);
  
  this.init("bindings", null);
};
AnalyseBindings.prototype = Object.create(Visitor.prototype);
AnalyseBindings.prototype.constructor = AnalyseBindings;
module.exports = AnalyseBindings;



AnalyseBindings.prototype.handleRule = function (indent, name, iname, parameters, body) {
  this.push("bindings", []);
  this.visitChildren();
  var bindings = this.pop("bindings");
  
  return ["Rule", indent, name, iname, parameters, bindings, body];
};



AnalyseBindings.prototype.handleBindPattern = function (name, pattern) {
  this.apushIfAbsent("bindings", name);
  
  return this.visitChildren();
};
